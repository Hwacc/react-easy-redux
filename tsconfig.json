{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "commonjs",
        "lib": ["es5", "es6"],
        "noEmit": true,
        "strict": true,
        "target": "es5",
        "sourceMap": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/@types/*"]
        }
    },
    "include": ["src/**/*"]
}
